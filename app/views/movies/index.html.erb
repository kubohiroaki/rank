
<h1 class="big_title">映画ランキング</h1>
    <%= render partial: 'movies/search' %>
    <%= render partial: 'movies/search2' %>
<div class="rank_top">

<section class="smoll_title">

<h2>総合得点別ランキング</h2>
    <ul class="title">
        <% @movies.each do |m| %>
        <li>
        <%= link_to movie_path(m.id) do %>
            <div><%= image_tag image_url(m) %></div>
            <div>名前：<%= m.title %></div>
            <%= link_to like_path(m) do %>
              <i class="fa fa-heart active"><%= movie_like_count(m) %></i>
            <% end %>
        <% end %>
        </li>
       <% end %>
    </ul>
<% if @page > 0 %>
    <%= form_tag("/movies/prev", method: :post) do %>
        <%= render partial: 'movies/hidden' %>
        <%= submit_tag "前へ" %>
    <% end %>
<% end %>
<% if @page < 1 %>
    <%= form_tag("/movies/next", method: :post) do %>
        <%= render partial: 'movies/hidden' %>
        <%= submit_tag "次へ" %>
    <% end %>
<% end %>
</section>
    
    
