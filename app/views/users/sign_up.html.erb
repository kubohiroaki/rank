<div class="sign_up">
  <div class="contents">
    <div class="sign_up_form">
      <h1>映画ランキングサイト</h1>
      <p>新規登録</p>
      <%= form_for @user, url: sign_up_path do |f| %>
        <div class="field">
          <%= f.text_field :name, placeholder: "ユーザーネーム" %>
        </div>
        <div class="field">
          <%= f.email_field :email, placeholder: "メールアドレス" %>
        </div>
        <div class="field">
          <%= f.password_field :password, placeholder: "パスワード" %>
        </div>
        <div class="field">
          <%= f.password_field :password_confirmation, placeholder: "パスワード(確認)" %>
        </div>
        <button>登録する</button>
      <% end %>
    </div>
    <div class="sign_in_link">
      <p>アカウントをお持ちですか？ <%= link_to sign_in_path do %>サインインする<% end %></p>
    </div>
  </div>
</div>